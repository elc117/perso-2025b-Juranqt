// {
  "name": "Haskell Development",
  "dockerFile": "Dockerfile",
  "extensions": [
    "justusadam.language-haskell",
    "haskell.haskell"  // Extensão oficial Haskell para syntax highlighting e mais
  ],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "/bin/bash",
    "haskell.serverSet": "haskell-language-server"  // Para LSP (autocomplete, etc.)
  },
  "forwardPorts": [3000],  // Para expor o servidor Scotty (acesse via https://<codespace-id>-3000.app.github.dev)
  "portsAttributes": {
    "3000": {
      "label": "Scotty Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "cabal update"  // Atualiza o índice de pacotes Cabal ao criar o container
}

